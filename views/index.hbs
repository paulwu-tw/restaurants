<!-- search bar -->
<div class="container search-bar">
    <div class="search-bar-outer">
        <div class="search-bar-inner">
            <form action="/search">
                <h4 class="mb-2">尋找餐廳：</h4>
                <div class="input-group">
                    <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類"
                        aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
                    <div class="input-group-append">
                        <button class="btn btn-major" type="submit" id="search-button"><i
                                class="fas fa-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- restaurant list -->
<div class="container mt-3">
    <div class="row text-end">
        <div class="col-md-10 col-12 mx-auto">
            <div class="row row-cols-sm-3">
                {{#each restaurants}}
                <div class="mb-3">
                    <a href="/restaurants/{{this.id}}" class="text-secondary mb-0">
                        <div class="card mb-3">
                            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                            <div class="card-body p-3">
                                <h6 class="card-title mb-1">{{this.name}}</h6>
                                <div class="restaurant-category mb-1">
                                    <i class="fas fa-utensils pr-2"></i>
                                    {{this.category}}
                                </div>
                                <span class="badge bg-success">
                                    <i class="fa-solid fa-star fa-xs" style="color: #e8e5e5;"></i>
                                    {{this.rating}}
                                    {{!-- <i class="fas fa-star fa-xs"></i> --}}
                                </span>
                            </div>
                        </div>
                    </a>
                    <div class="d-flex justify-content-end">
                        <a href="/restaurants/{{this.id}}" class="me-1">
                            <button type="button" class="btn btn-dark">
                                Detail
                            </button>
                        </a>
                        <a href="/restaurants/{{this.id}}/edit" class="me-1">
                            <button type="button" class="btn btn-dark">
                                Edit
                            </button>
                        </a>
                        <form action="/restaurants/{{this.id}}/delete" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>