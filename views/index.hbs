<!-- search bar -->
<form action="/search" class="mt-3">
    <div class="d-flex justify-content-evenly">
        <div class="input-group" style="width: 300px;">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
                value="{{keyword}}" aria-describedby="search-button">
            <div class="input-group-append">
                <button class="btn btn-dark" type="submit" id="search-button">
                    <i class="fas fa-search" style="color: rgba(240, 203, 17, 0.673);"></i>
                </button>
            </div>
        </div>

        <div>
            <select class="form-select" aria-label="Sort" name="sort" style="width: 150px;"
                onchange="this.form.submit()">
                <option value="" disabled selected>選擇排序方式</option>
                <option value="name_en" {{checkSelectValue sort "name_en" }}>A->Z</option>
                <option value="-name_en" {{checkSelectValue sort "-name_en" }}>Z->A</option>
                <option value="-rating" {{checkSelectValue sort "-rating" }}>評分↓</option>
                <option value="rating" {{checkSelectValue sort "rating" }}>評分↑</option>
            </select>
        </div>
    </div>
</form>

<!-- restaurant list -->
<div class="container mt-3">
    <div class="row text-end">
        <div class="col-md-10 col-12 mx-auto">
            <div class="row row-cols-sm-3" id="panel">
                {{#each restaurants}}
                <div class="mb-3">
                    <a href="/restaurants/{{this._id}}" class="text-secondary mb-0">
                        <div class="card mb-3">
                            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                            <div class="card-body p-3">
                                <h6 class="card-title mb-1">{{this.name}}</h6>
                                <div class="restaurant-category mb-1">
                                    <i class="fas fa-utensils pr-2"></i>
                                    {{this.category}}
                                </div>
                                <span class="badge bg-danger">
                                    <i class="fa-solid fa-star fa-xs" style="color: #e8e5e5;"></i>
                                    {{this.rating}}
                                    {{!-- <i class="fas fa-star fa-xs"></i> --}}
                                </span>
                            </div>
                        </div>
                    </a>
                    <div class="d-flex justify-content-end">
                        <a href="/restaurants/{{this._id}}" class="me-1">
                            <button type="button" class="btn btn-secondary">
                                Detail
                            </button>
                        </a>
                        <a href="/restaurants/{{this._id}}/edit" class="me-1">
                            <button type="button" class="btn btn-secondary">
                                Edit
                            </button>
                        </a>
                        {{!-- <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST" style="display:inline;"> --}}
                            <button type="submit" class="btn btn-danger delete-restaurant" data-id="{{this._id}}">
                                Delete
                            </button>
                        {{!-- </form> --}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>