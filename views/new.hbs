<form action="/restaurants" method="POST">
    <div class="d-flex flex-column mt-3 align-items-center">
        <input class="mt-2" type="text" placeholder="麥XX" value="" name="name" required>
        <input class="mt-2" type="text" placeholder="McDonald" value="" name="name_en">
        <input class="mt-2" type="text" placeholder="日式、中式..." value="" name="category" required>
        <input class="mt-2" type="text" placeholder="台北市信義區..." value="" name="location" required>
        <input class="mt-2" type="url" placeholder="https://goo.gl/maps/..." name="google_map">
        <input class="mt-2" type="tel" placeholder="02-23456789" value="" name="phone" required>
        <input class="mt-2" type="text" placeholder="餐廳描述" value="" name="description" required>
        <input class="mt-2" type="url" placeholder="http://image....." value="" name="image" required>
        <input class="mt-2" type="number" min="0" max="5" step="0.1" placeholder="3" name="rating">

        <button type="submit" class="btn btn-primary mt-2">Create</button>
        <button type="reset" class="btn btn-danger mt-2">Reset</button>
    </div>
</form>