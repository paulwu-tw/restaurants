<form action="/restaurants" method="POST">
    <div class="d-flex flex-column mt-3 align-items-center">
        <input class="mt-2" type="text" placeholder="麥當當" name="name" required>
        <input class="mt-2" type="text" placeholder="McDonald" name="name_en">
        <input class="mt-2" type="text" placeholder="日式、中式..." name="category" required>
        <input class="mt-2" type="text" placeholder="台北市信義區..." name="location" required>
        <input class="mt-2" type="url" placeholder="https://goo.gl/maps/..." name="google_map" required>
        <input class="mt-2" type="tel" placeholder="02-77452256" name="phone" required>
        <input class="mt-2" type="text" placeholder="餐廳描述" name="description" required>
        <input class="mt-2" type="url" placeholder="http://image....." name="image" required>
        <input class="mt-2" type="number" min="0" max="5" step="0.1" placeholder="3" name="rating" required>

        <button type="submit" class="btn btn-primary mt-2">Create</button>
        <button type="reset" class="btn btn-danger mt-2">Reset</button>
    </div>
</form>